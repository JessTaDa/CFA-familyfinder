  <div class="field">
    <%= f.hidden_field :relation, :value => 'Myself' %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :age %>
    <%= f.number_field :age %>
  </div>

  <div class="field">
    <%= f.label :town %>
    <%= f.text_field :town %>
  </div>

  <div class="field">
    <%= f.label :story %>
    <%= f.text_area :story %>
  </div>

  <div class="field">
    <%= f.label :missing %>
    <%= f.check_box :missing %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
