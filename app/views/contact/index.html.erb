<div class="col-md-6">
  <% if flash[:notice] %>
      <h2><div class="notice"><%= flash[:notice] %></div></h2>
    <% elsif flash[:warning] %>
      <div class="alert alert-danger"><%= flash[:warning] %></div>
    <% else %>
  <% end %>
  <h4>Contact us</h4>
  <%= simple_form_for :contact do |f| %>
    <%= f.hidden_field :email => current_user.email, placeholder: 'type email here' %>
    <%= f.input :message, placeholder: 'type message here', :as => :text %>
    <%= f.button :submit, "Send" %>
  <% end %>
</div>
