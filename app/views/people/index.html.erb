<p id="notice"><%= notice %></p>

<h1>Search people database</h1>

  <%= search_form_for @q do |f| %>
    Search all entries containing
    <%= f.search_field :name_cont %><br>
    <%= button_to "Search database", :type =>'submit', :class => 'btn waves-light', :method => "get" %>
  <% end %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Relation</th>
      <th>Name</th>
      <th>Age</th>
      <th>Town</th>
      <th>Story</th>
      <th>Missing</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.user.email %></td>
        <td><%= person.relation %></td>
        <td><%= person.name %></td>
        <td><%= person.age %></td>
        <td><%= person.town %></td>
        <td><%= person.story %></td>
        <td><%= person.missing %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person', new_person_path %>
