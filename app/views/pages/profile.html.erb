  <h1>People</h1>

  <table class="table table-hover">
    <thead>
      <tr>

        <th>Relation</th>
        <th>Name</th>
        <th>Age</th>
        <th>Town</th>
        <th>Story</th>
        <th>Missing</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @person.each do |person| %>
        <tr>

          <td><%= person.relation %></td>
          <td><%= person.name %></td>
          <td><%= person.age %></td>
          <td><%= person.town %></td>
          <td><%= person.story %></td>
          <td><%= person.missing %></td>
          <td><%= link_to 'Show', person %></td>
          <td><%= link_to 'Edit', edit_person_path(person) %></td>
          <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


<br>
